# Environment Configuration Example
NODE_ENV=development
PORT=3000

# Database Configuration
DATABASE_URL=

# Clerk Configuration
CLERK_SECRET_KEY=

# Cloudinary Configuration
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret

# Gemini API Configuration
GEMINI_API_KEY=your_gemini_api_key_here

# Redis Configuration (for BullMQ)
REDIS_URL=redis://default:your_redis_password@your_redis_host:your_redis_port

# SMTP Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password
SMTP_FROM="Tiệm Cầm Đồ <noreply@pawnshop.com>"

# Twilio SMS Configuration (optional - leave empty to use mock mode)
# Get credentials from: https://console.twilio.com/
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_FROM_NUMBER=


// ==================================================
// SYSTEM PARAMETER
// ==================================================
model SystemParameter {
  id          Int      @id @default(autoincrement())
  paramGroup  String?
  paramKey    String
  paramValue  String
  dataType    String?  @default("STRING")
  description String?
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @default(now())

  @@unique([paramGroup, paramKey])
}
